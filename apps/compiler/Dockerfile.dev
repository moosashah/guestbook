FROM node:24-alpine

# Install ffmpeg and font packages
RUN apk add --no-cache ffmpeg fontconfig ttf-liberation

# Create fonts directory and copy custom fonts
RUN mkdir -p /usr/share/fonts/custom
COPY apps/compiler/fonts/ /usr/share/fonts/custom/

# Update font cache
RUN fc-cache -f -v

WORKDIR /app

# Copy package files
COPY apps/compiler/package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY apps/compiler/src/ ./src/
COPY apps/compiler/fonts/ ./fonts/

# Expose port
EXPOSE 3001

# Start the application
CMD ["npm", "start"]