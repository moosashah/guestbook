FROM node:18-alpine

# Install ffmpeg and fonts
RUN apk add --no-cache ffmpeg fontconfig ttf-liberation

# Create fonts directory and copy custom fonts
RUN mkdir -p /usr/share/fonts/custom
COPY apps/compiler/fonts/ /usr/share/fonts/custom/

# Update font cache
RUN fc-cache -f -v

WORKDIR /app

# Copy package files
COPY apps/compiler/package.json ./

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
RUN pnpm install

# For development, we'll mount the source code as a volume
# Expose port
EXPOSE 3001

# Start in development mode with hot reload (local dev script)
CMD ["pnpm", "run", "dev:local"]
