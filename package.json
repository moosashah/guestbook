{
  "name": "guestbook-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "start": "turbo start",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "kill:ports": "lsof -ti:3000,3001,3002 | xargs kill -9 2>/dev/null",
    "compiler:deploy": "pnpm --filter=compiler run deploy",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
