{
  "name": "guestbook-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "start": "turbo start",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "compiler:deploy": "pnpm --filter=compiler run deploy"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
